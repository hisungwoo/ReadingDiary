<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_message_background_round"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/dialog_dev_vw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F4E2E2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_dev_close_btn"
        />

    <ImageView
        android:id="@+id/dialog_dev_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_all_reading_icon_1"
        android:elevation="3dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/dialog_dev_vw"
        app:layout_constraintStart_toStartOf="@+id/dialog_dev_vw"
        app:layout_constraintEnd_toEndOf="@+id/dialog_dev_vw"
        app:layout_constraintBottom_toTopOf="@+id/dialog_contact_title"
        />

    <TextView
        android:id="@+id/dialog_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:text="Contact"
        android:textSize="17sp"
        android:textColor="#FA5858"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/dialog_dev_img"
        app:layout_constraintStart_toStartOf="@+id/dialog_dev_vw"
        app:layout_constraintEnd_toStartOf="@+id/dialog_contact_tv"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_dev_vw"
        />

    <TextView
        android:id="@+id/dialog_contact_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:textSize="17sp"
        android:text="ilsamildev@gmail.com"
        android:textColor="#656565"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/dialog_contact_title"
        app:layout_constraintStart_toEndOf="@+id/dialog_contact_title"
        app:layout_constraintEnd_toEndOf="@+id/dialog_dev_vw"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_dev_close_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_round_gray"
        android:text="닫기"
        android:textSize="16sp"
        android:textColor="#4E4E4E"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_dev_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>