<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_stats_book"
        android:layout_width="27dp"
        android:layout_height="170dp"
        android:background="@drawable/stats_book_item"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/item_stats_name_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="전지적작가시점이지"
        android:lineSpacingExtra="-2dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:textSize="16sp"
        android:textColor="#EFEFEF"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="8"
        app:layout_constraintTop_toTopOf="@+id/item_stats_book"
        app:layout_constraintBottom_toBottomOf="@+id/item_stats_book"
        app:layout_constraintStart_toStartOf="@+id/item_stats_book"
        app:layout_constraintEnd_toEndOf="@+id/item_stats_book"
        />



</androidx.constraintlayout.widget.ConstraintLayout>