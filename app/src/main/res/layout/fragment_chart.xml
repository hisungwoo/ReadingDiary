<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ChartFragment">



    <TextView
        android:id="@+id/bookshelf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="책장"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#5C5C5C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/bookshelf_reading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독서 정보"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/bookshelf_title"
        app:layout_constraintStart_toStartOf="@+id/bookshelf_title"
        />

    <TextView
        android:id="@+id/bookshelf_reading_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 독서 일 "
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/bookshelf_reading_title"
        app:layout_constraintStart_toStartOf="@+id/bookshelf_reading_title"
        />

    <TextView
        android:id="@+id/bookshelf_reading_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23일"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/bookshelf_reading_count_title"
        app:layout_constraintStart_toEndOf="@+id/bookshelf_reading_count_title"
        />

    <TextView
        android:id="@+id/bookshelf_reading_books_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="읽은 책 "
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/bookshelf_reading_count_title"
        app:layout_constraintStart_toStartOf="@+id/bookshelf_reading_count_title"
        />

    <TextView
        android:id="@+id/bookshelf_reading_books_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8권"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/bookshelf_reading_books_title"
        app:layout_constraintStart_toEndOf="@+id/bookshelf_reading_books_title"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bookshelf"
        app:layout_constraintTop_toBottomOf="@+id/bookshelf_reading_books_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>