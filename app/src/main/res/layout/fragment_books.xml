<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.ilsamil.readingdiary.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.BooksFragment">

        <TextView
            android:id="@+id/books_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:text="나의 서재"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/books_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책 추가하기"
            app:layout_constraintTop_toTopOf="@+id/books_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/books_title_tv"
            app:layout_constraintStart_toEndOf="@+id/books_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/books_category_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/books_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/books_category_reading_btn"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/books_category_reading_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="읽고 있는 책"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/books_category_all_btn"
            app:layout_constraintStart_toEndOf="@+id/books_category_all_btn"
            app:layout_constraintEnd_toStartOf="@id/books_category_finish_btn"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/books_category_finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다 읽은 책"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/books_category_all_btn"
            app:layout_constraintStart_toEndOf="@+id/books_category_reading_btn"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/books_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@id/books_category_all_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>

