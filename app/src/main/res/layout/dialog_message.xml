<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_message_background_round"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_message_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동의 메세지"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_message_no_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#676767"
        android:background="@drawable/button_background_round_gray"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_message_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_message_yes_btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_message_yes_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_round_red"
        android:text="삭제"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/dialog_message_no_btn"
        app:layout_constraintStart_toEndOf="@+id/dialog_message_no_btn"
        app:layout_constraintEnd_toEndOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>