<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReadingActivity">

    <TextView
        android:id="@+id/add_reading_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2022년 5월 25일"
        />

    <TextView
        android:id="@+id/add_reading_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/add_reading_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:text="책"
        />

    <Button
        android:id="@+id/add_reading_selbook_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책 선택"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/add_reading_book_title"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/add_reading_book_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="전지적 독자 시점"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/add_reading_selbook_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/add_reading_book_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/add_reading_book_name_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_brightness_check_1_24"
        />

    <TextView
        android:id="@+id/add_reading_book_st_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독서"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add_reading_book_iv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="읽은 페이지 수                        33"
        app:layout_constraintTop_toBottomOf="@+id/add_reading_book_st_title"
        app:layout_constraintStart_toStartOf="@+id/add_reading_book_st_title"
    />



    <Button
        android:id="@+id/add_reading_save_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="저장하기"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>